{
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "overrides": [
        {
            "files": ["test/**"],
            "env": {
                "mocha": true,
                "node": true
            }
        }
    ]
}
